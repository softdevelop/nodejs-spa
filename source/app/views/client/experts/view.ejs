<% extend('../layouts/base',{
  title: "Service"
}) %>


    <!-- ======================================= 
        ==start Slider section==  
    =======================================-->
    <section class="home1-slider top-margin pos-relative">
      <div class="Modern-Slider" id="home1-slider">
          <!-- item -->
          <% expert.images.forEach(item=>{ %>
            <div class="item">
              <div class="img-fill">
                  <div class="img-area slider-img1" style="background: url(<%=urlMediaUpload.imageObj(item)%>) no-repeat center center / cover;"></div>
                  <div class="info">
                      <div class="align-col-left-center">
                          <div class="container">
                              <div class="row">
                                  <div class="col-12 text-left">
                                      <h3 class="color-d5 fw-700"><%=expert.user.first_name%> <%=expert.user.last_name%></h3>
                                      <h5 class="text-left"><%=expert.slogan%></h5>
                                      <a href="#about" class="explore-btn fw-700">Khám phá thêm</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <!-- /item -->
          <% }) %>

          <!-- /item-4 -->
      </div>
  </section>
  <!-- ======================================= 
      ==End Slider section==  
  =======================================-->
  <section class="service-section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-12">
              <%-expert.about%>
            </div>
        </div>
    </div>
  </section>
  
  <section class="service-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
              <%-expert.description%>
            </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="mt-5">
              <h4 class="mb-2">Tag: </h4>
              <% expert.tags.forEach(item=>{ %>
                <span class="btn-register"><%=item%></span> 
              <% }) %>
            </div>
          </div>
      </div>
    </div>
  </section>

  <section>
    <
  </section>

    <!-- ======================================= 
            ==Start Service section== 
    =======================================-->
    <section class="service-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h3 class="color-72 fw-500 pb-10">Dịch vụ của tôi</h3>
                        <!-- <p>Lorem ipsum dolor sit amet, consectetur adipisici elit, sed eiusmod tempor incidunt ut labore etc.</p> -->
                    </div>
                </div>
                <!--/col-->
            </div>
            <!--/row-->

            <div class="row">
              <% expert.services.forEach(item=>{ %>
                <!--service-1-->
                <div class="col-lg-4 col-md-6">
                  <div class="single-service">
                      <div class="img"><img src="<%=urlMediaUpload.imageObj(item.image)%>" alt="service-img" class="img-fluid"></div>
                      <div class="img-over-content text-center">
                          <p><%=item.title%></p>
                          <div class="divider"></div>
                          <a href="service-details.html" class="fw-500 color-33 mtb-15"><%=item.price%></a>
                          <p><%-item.content%></p>
                      </div>
                  </div>
                </div>
              <% }) %>
               
            </div>
            <!--/row-->
        </div>
    </section>
    <!-- ======================================= 
            ==End Service section== 
    =======================================-->


    <!-- ======================================= 
            ==Start Testimonial section==  
    =======================================-->
    <section class="testimonial-section">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
                    <div class="section-title pb-60 text-center">
                    </div>

                    <div class="testimoial-wrapper owl-carousel">
                        
                    </div>
                    <!--/testimoial wrapper-->
                </div>
                <!--/col-->
            </div>
        </div>
    </section>
    <!-- ======================================= 
            ==End Testimonial section== 
    =======================================-->

    