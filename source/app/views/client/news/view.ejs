<% extend('../layouts/base',{
  title: "News"
}) %>


    <!-- ======================================= 
        ==Start banner section== 
    =======================================-->
    <section class="banner-section blog-banner top-margin">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content">
                        <h4 class="fw-500 color-ff"><%=data.name%></h4>
                    </div>
                    <ol class="breadcrumb">
                        <li><a href="/">Trang chá»§</a></li>
                        <li class="active"><%=data.name%></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- ======================================= 
        ==End banner section==  
    =======================================-->


    <!-- ======================================= 
            ==Start Blog section==  
    =======================================-->
    <section class="blog-section blog-details">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog-details-wrapper">
                        <img src="<%=urlMediaUpload.imageObj(data.image)%>" alt="blog-details-img" class="img-fluid" />
                        <h5 class="title color-d5"><%=data.name%></h5>
                        <ul class="tags ptb-20">
                            <li><i class="fa fa-heart color-72"></i>22</li>
                            <li><i class="fa fa-eye color-72"></i><%=data.numOfViews%></li>
                            <li><i class="fa fa-home color-72"></i> <%-data.spas.address%></li>
                            <li><i class="fa fa-calendar color-72"></i><%=moment(data.date).format('DD/MM/YYYY')%></li>
                        </ul>
                        <p>
                            <%-data.content%>
                        </p>

                        <div class="admin-details">
                            <img src="<%=urlMediaUpload.imageObj(data.spas.logo)%>" alt="admin">
                            <div class="admin-description color-ff">
                                <h5> <span class="fw-500"> <%-data.spas.name%></span></h5>
                                <p class="color-ff"><%-data.spas.description%></p>
                            </div>
                        </div>
                        <!--/admin details-->

                       
                    </div>
                    <!--/blog post wrapper-->

               
                    <!--/comment-form-section-->
                </div>
                <!--/col-->

            
            </div>
            <!--/row-->
        </div>
    </section>
    <!-- ======================================= 
            ==End blog section== 
    =======================================-->


