    <body id='spa' data-spy="scroll" data-target=".navbar-default" data-offset="150">
        <!-- search-modal -->
        <div class="modal fade" id="search-modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <img src="/template/3/images/search-popup-logo.png" alt="search-popup-logo">
                    <form action="" class="form-inline">
                        <input type="text" name="search" placeholder="Search here...">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                    <div class="quick-search">
                        <h6 class="color-ff pos-relative ptb-30">Quick search</h6>
                        <ul>
                            <li><a href="#">parlour</a></li>
                            <li><a href="#">massage</a></li>
                            <li><a href="#">yoga</a></li>
                            <li><a href="#">spa</a></li>
                            <li><a href="#">beauty</a></li>
                            <li><a href="#">exparts</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>



        <div id="preloader">
            <div class="loading">
                <ul class="spinner">
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>
        </div>



        <section id="slides">
            <div class="slides-container">
                <% spaDetail.intros.forEach(item=>{ %>
                    <div class="slide active">
                        <img src="<%=urlMediaUpload.imageObj(item.image)%>" alt="slide" class="img-responsive">
                        <div class="slide-caption">
                            <div class="container wow fadeInDownBig">
                                <h1>
                                    <%-item.title%>
                                </h1>
                                <p>
                                    <%-item.content%>
                                </p>
                                <a class="btn btn-primary read" href="#services">read More</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <nav class="slides-navigation">
                <a class="prev" href="#"> <i class="fa fa-chevron-left"></i></a>
                <a class="next" href="#"> <i class="fa fa-chevron-right"></i></a>
            </nav>
        </section>




        <section id="about" class="page-block">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 ">
                        <div class="aboutImg">
                            <img class="img-responsive wow fadeInUpBig" data-wow-offset="300" src="<%=urlMediaUpload.imageObj(spaDetail.imgs[0])%>" alt="About" />
                            <img class="shadow img-responsive" src="/template/3/images/seperator-shadow.png" alt="Seperator shadow" />
                        </div>
                        <h2>About <span>BeautySpa</span></h2>
                        <p style="margin-top: 20px;">
                            <%- spaDetail.description %>
                        </p>
                    </div>
                </div>
            </div>
        </section>


        <section id="services" class="page-block">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <h2>Our <span>Services</span></h2>
                        <div id="serviceList" class="carousel slide clearfix" data-ride="carousel">

                            <ol class="carousel-indicators clearfix">
                                <% spaDetail.services.forEach((item,key)=>{ %>
                                    <li data-target="#serviceList" data-slide-to="<%=key%>" class="item1 <%= key==0?'active':''%> wow fadeInDown" data-wow-offset="200" data-wow-delay="<%=key+1%>00ms"><strong><%=item.title || item.service.title%></strong><span><%=key+1%></span></li>
                                <% }) %>
                            </ol>

                            <div class="carousel-inner">
                                <% spaDetail.services.forEach((item,key)=>{ %>
                                <div class="item <%= key==0?'active':''%>">
                                    <div class="col-md-4 col-sm-5"><img class="img-responsive" src="<%=urlMediaUpload.imageObj( item.image || item.service.image )%>" alt="1"></div>
                                    <div class="col-md-7 col-md-offset-1 col-sm-7">
                                        <h3 style="font-size: 30px;"><%=item.title || item.service.title%><strong class="price "><%=item.price%> 0000<small>vnd</small></strong></h3>
                                        <p style="margin-top: 15px;">
                                            <%-truncate(item.content || item.service.content, 300)%>    
                                        </p>
                                        
                                    </div>
                                </div>
                                <% }) %>
                                     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </section>



        <section id="team" class="page-block">
            <div class="container">
                <div class="row">
                    <h2>Our <span>Experts</span></h2>
                    <p class="text-center" style="max-width :500px ; margin: 5px auto 25px auto; ">Third and made a saying stars two. Image stars. All let made subdue, stars fruit blessed were. Lights fowl fruitful.</p>
                    <% spaDetail.members.forEach(item=>{ %>
                    <div class="col-md-3 col-sm-3 wow fadeInDown" data-wow-offset="200" data-wow-delay="300ms">
                        <div class="ih-item square effect10 top_to_bottom">
                            <aside>
                                <div class="img"><img class="img-responsive" src="<%=urlMediaUpload.imageObj(item.avatar)%>" alt="img"></div>
                                <div class="info">
                                    <div class="info-back">
                                        <h4><%=item.name%></h4>
                                        <strong><%=item.position%></span></strong>
                                        <p> <%-item.content%></p>
                                        <ul class="social list-inline">
                                            <li><a href="<%=item.facebook%>" title="Follow Us on Facebook"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="#" title="Follow Us on Twitter"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href="#" title="Watch Our Videos"><i class="fa fa-youtube-play"></i></a></li>
                                            <li><a href="#" title="Watch Our gallery"><i class="fa fa-flickr"></i></a></li>
                                            <li><a href="<%=item.facebook%>" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </aside>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </section>


        

        <section id="contact" class="page-block">
            <div class="container">
                <div class="row">
                    <h2>Contact <span>Us</span></h2>
                    <div class="col-md-8 col-sm-8">
                        <div class="alert alert-primary alert-booking " style="display: <%= discount?'block':'none' %>;">
                            <%- discount?discount.title:'' %> <br>
                                <%- discount?discount.content:'' %>
                        </div>
                        <p style="margin: 15px 0;">Fill up form below for appointment. All fields are required.</p>
                        <form  method="post" >
                            <div class="field-wrapper">
                                <div class="form-row col-md-6 wow fadeInLeft" data-wow-offset="200" data-wow-delay="100ms">
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Tên*" />
                                </div>
                                <div class="form-row col-md-6 wow fadeInRight" data-wow-offset="200" data-wow-delay="200ms">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email*" />
                                </div>
                                <div class="form-row col-md-6 wow fadeInLeft" data-wow-offset="200" data-wow-delay="100ms">
                                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Số điện thoại*" />
                                </div>
                                <div class="form-row col-md-6 wow fadeInRight" data-wow-offset="200" data-wow-delay="200ms">
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Địa chỉ*" />
                                </div>
                                <div class="form-row col-md-12 clearfix wow fadeInUp" data-wow-offset="100" data-wow-delay="500ms">
                                    <textarea cols="60" rows="3" id="note" name="note" class="form-control" placeholder="Ghi chú*"></textarea>
                                </div>
                                <div class="form-row col-md-6 wow fadeInLeft" data-wow-offset="150" data-wow-delay="300ms">
                                    <select class="form-control no-border" id="service" name="spa_service_id" placeholder="Dịch vụ*">
                                        <% spaDetail.services.forEach(item=>{ %>
                                          <option value="<%=item._id%>"><%=item.title || item.service.title%></option>
                                        <% }) %>
                                      </select>
                                </div>
                                <div class="form-row col-md-6 wow fadeInRight" data-wow-offset="150" data-wow-delay="400ms">
                                    <input type="date" class="form-control" value="" id="date" name="date" placeholder="Ngày đặt" />
                                </div>
                                <div class="form-row col-md-12 clearfix wow fadeInUp" data-wow-offset="100" data-wow-delay="500ms">
                                    <textarea cols="60" rows="3" id="message" name="message" class="form-control" placeholder="Nội dung*"></textarea>
                                </div>
                                <div class="col-md-12 wow fadeInUp" data-wow-offset="50" data-wow-delay="700ms">
                                    <input type="submit" value="Submit" class="btn btn-default" id="submit" name="submit" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3 col-md-offset-1 col-sm-4 contactInfo">
                        <h5>GET IN TOUCH</h5>
                        <p class="no-border wow fadeInRight" data-wow-offset="200" data-wow-delay="100ms">
                            <i class="fa fa-clock-o"></i> Monday - Friday: <br><%= spaDetail.working_hour.start  %> - <%= spaDetail.working_hour.end  %>
                        </p>
                        <p class="wow fadeInRight" data-wow-offset="200" data-wow-delay="300ms">
                            <i class="fa fa-map-marker"></i> <%= spaDetail.address  %>
                        </p>
                        <p class="wow fadeInRight" data-wow-offset="200" data-wow-delay="500ms">
                            <i class="fa fa-phone"></i> Phone:  <%= spaDetail.phone  %>
                        </p>
                        <p class="wow fadeInRight" data-wow-offset="200" data-wow-delay="700ms">
                            <i class="fa fa-envelope-o"></i>  <%= spaDetail.email  %>
                        </p>
                    </div>
                </div>
            </div>
        </section>

