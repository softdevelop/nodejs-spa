<% extend('../layouts/base', { 
  title: "Question and Answer management",
  subTitle: "Edit",
  css: `
    <link rel="stylesheet" href="/libs/node_modules/dropify/dist/css/dropify.min.css">
    <link href="/libs/dist/css/style.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/libs/node_modules/summernote/dist/summernote-bs4.css">
  `,
  script: `
    <script src="/libs/node_modules/summernote/dist/summernote-bs4.min.js"></script>
    <script src="/js/slugify.js"></script>
    <script src="/js/admin/summernote-init.js"></script>

    
  `
  }) %>
<div class="container-fluid">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="row page-titles">
     <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Question and Answer</h4>
     </div>
     <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
           <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
              <li class="breadcrumb-item active">Question and Answer</li>
           </ol>
           <a href="/admin/users" <button type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> List</button></a>
        </div>
     </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Start Page Content -->
  <!-- ============================================================== -->
  <!-- Row -->
  <div class="row">
     <div class="col-lg-12">
        <div class="card">
           <div class="card-body">
              <form action="/admin/q-a/<%=data._id%>/edit" method="post">
                 <div class="form-body">
                    <h3 class="card-title">Question and Answer Info</h3>
                    <hr>
                    <div class="row p-t-20">
                       <div class="col-md-6">
                          <div class="form-group form-group-question <%=errors.question?'has-danger':''%>">
                             <label class="control-label">Question</label>
                             <input type="text" id="question" class="form-control" placeholder="" name="question" required value="<%=data.question?data.question:''%>">
                             <small class="form-control-feedback"><%=errors?errors.question:''%></small>
                          </div>
                       </div>
                       <div class="col-md-6">
                          <div class="form-group form-group-slug <%=errors.slug?'has-danger':''%>">
                             <label class="control-label">Slug</label>
                             <input type="text" id="slug" class="form-control" placeholder="" name="slug" required value="<%=data.slug?data.slug:''%>">
                             <small class="form-control-feedback"><%=errors?errors.slug:''%></small>
                          </div>
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-12 ">
                          <div class="form-group form-group-answer <%=errors.answer? 'has-danger': ''%>">
                             <label class="control-label">Answer</label>
                             <textarea class="summernote" style="z-index: 1;" name="answer"><%=data.answer?data.answer:''%></textarea>
                             <small class="form-control-feedback"><%=errors?errors.answer:''%></small>
                          </div>
                       </div>
                    </div>
                    <!--/row-->
                    <div class="row p-t-20">
                       <div class="col-md-6">
                          <div class="form-group form-group-status <%=errors.status?'has-danger':''%>">
                             <label class="control-label">Status</label>
                             <select class="form-control custom-select" name="status">
                              <option value="pending" <%=data.status=='pending'?'selected':''%>>Pending</option>
                              <option value="active" <%=data.status=='active'?'selected':''%>>Active</option>
                              <option value="blocked" <%=data.status=='blocked'?'selected':''%>>Blocked</option>
                            </select>
                             <small class="form-control-feedback "><%=errors?errors.status:''%></small> 
                          </div>
                       </div>
                    </div>
                    <!--/row-->
                    <div class="form-actions">
                       <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                       <a href="/admin/users">
                       <button type="button" class="btn btn-inverse">Cancel</button>
                       </a>
                    </div>
              </form>
              </div>
           </div>
        </div>
     </div>
     <!-- Row -->
     <!-- ============================================================== -->
     <!-- End PAge Content -->
     <!-- ============================================================== -->
     <!-- ============================================================== -->
     <!-- Right sidebar -->
     <!-- ============================================================== -->
