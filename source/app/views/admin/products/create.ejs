    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form action="/admin/products/create" method="post" enctype="multipart/form-data">
                        <div class="form-body">
                            <h3 class="card-title">Product Info</h3>
                            <hr>
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.name?'has-danger':''%>">
                                        <label class="control-label">Name</label>
                                        <input type="text" id="name" class="form-control" placeholder="" name="name"
                                            required value="<%=data.name?data.name:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.name:''%></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.price?'has-danger':''%>">
                                        <label class="control-label">Price</label>
                                        <input type="text" id="last_name" class="form-control" placeholder=""
                                            name="last_name" required value="<%=data.last_name?data.last_name:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.last_name:''%></small>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.category_id?'has-danger':''%>">
                                        <label class="control-label">Category_id</label>
                                        <input type="text" id="category_id" class="form-control" placeholder=""
                                            name="category_id" required
                                            value="<%=data.category_id?data.category_id : ''%>">
                                        <small class="form-control-feedback"><%=errors?errors.category_id:''%></small>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.slug?'has-danger':''%>">
                                        <label class="control-label">Slug</label>
                                        <input type="text" id="slug" class="form-control" placeholder=""
                                            name="slug" required
                                            value="<%=data.slug?data.slug : ''%>">
                                        <small class="form-control-feedback"><%=errors?errors.slug:''%></small>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            
                            <!--/row-->
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.status?'has-danger':''%>">
                                        <label class="control-label">Status</label>
                                        <select class="form-control custom-select" name="status">
                                            <option value="pending">Pending</option>
                                            <option value="active" ">Active</option>
                                            <option value=" blocked ">Blocked</option>
                                        </select>
                                        <small class=" form-control-feedback "><%=errors?errors.status:''%></small> 
                                    </div>
                                </div>
                        

                                <div class=" col-md-6 ">
                                    <div class=" form-group <%=errors.imgs? 'has-danger': ''%>">
                                        <label class="control-label">Images</label>
                                        <input type="file" id="imgs" class="form-control" name="imgs"
                                            value="<%=data.imgs?data.imgs:''%>" multiple>
                                        <small
                                            class="form-control-feedback"><%=errors?errors.imgs:''%></small>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->

                            <!--/row-->
                            <div class="row p-t-20">
                                <div class="col-12">
                                    <label class="control-label">Description</label>
                                    <textarea class="summernote" name="decription"></textarea>
                                </div>
                            </div>
                            
                        </div>


                            <!--/row-->
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                                <a href="/admin/users">
                                    <button type="button" class="btn btn-inverse">Cancel</button>
                                </a>
                            </div>




                        </div>



                    </form>
                </div>
            </div>
