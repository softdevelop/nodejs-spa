<div class="CardItem card" id="<%=item._id%>">
  <div class="card-header">
    <%=item.name%>
    <div class="card-actions">
        <a class="" data-action="collapse"><i class="ti-minus"></i></a>
        <a class="btn-close" data-action="" data-type="members" data-id="<%=item._id%>"><i class="ti-close"></i></a>
    </div>
  </div>
  <div class="card-body collapse hide">
    <div class="row">
        <div class="col-md-12">
          <div class="form-group">
              <label>Tên</label>
              <input type="text" class="form-control" name="name" value="<%=item.name%>"> 
          </div>
        </div>
        <div class="col-md-12 ">
          <div class="form-group form-group-content ">
              <label class="control-label">Nội dung</label>
              <textarea class="summernote" style="z-index: 1;" name="content"><%=item.content%></textarea>
              <small class="form-control-feedback"></small>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
              <label>Ảnh đại diện</label>
              <input type="file" class="ImageUpload form-control" name="avatar" id="<%=item._id%>"> 
              <img class="avatar-100" src="<%=urlMediaUpload.imageObj(item.avatar)%>" />
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
              <label>Vị trí</label>
              <input type="text" class="form-control" name="position" value="<%=item.position%>"> 
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
              <label>Facebook</label>
              <input type="text" class="form-control" name="facebook" value="<%=item.facebook%>"> 
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
              <label>Gmail</label>
              <input type="text" class="form-control" name="gmail" value="<%=item.gmail%>"> 
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
              <label>Số điện thoại</label>
              <input type="text" class="form-control" name="phone" value="<%=item.phone%>"> 
          </div>
        </div>
    </div>
  </div>
</div>