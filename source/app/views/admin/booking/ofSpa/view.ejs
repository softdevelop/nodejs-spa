<% extend('../../layouts/base', { 
    title: "Booking management",
    subTitle: "Create",
    css: `
      <link rel="stylesheet" href="/libs/node_modules/dropify/dist/css/dropify.min.css">
      <link href="/libs/dist/css/style.min.css" rel="stylesheet">
      <link rel="stylesheet" type="text/css" href="/libs/node_modules/summernote/dist/summernote-bs4.css">
      <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin=""/>
      <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js" integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==" crossorigin=""></script>
    `,
    script: `
      <script src="/libs/node_modules/summernote/dist/summernote-bs4.min.js"></script>
      <script src="/js/slugify.js"></script>
      <script src="/js/admin/summernote-init.js"></script>


    `
    }) %>
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Booking</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Booking</li>
                </ol>
                <a href="/admin/booking" <button type="button" class="btn btn-info d-none d-lg-block m-l-15"><i
                        class="fa fa-plus-circle"></i> List</button></a>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form>
                        <div class="form-body">
                            <h3 class="card-title">Booking Info</h3>
                            <hr>
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group form-group-name <%=errors.name?'has-danger':''%>">
                                        <label class="control-label">Name</label>
                                        <input disabled type="text" id="name" class="form-control" placeholder=""
                                            name="name" required value="<%=data.name?data.name:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.name:''%></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-phone <%=errors.phone?'has-danger':''%>">
                                        <label class="control-label">Phone</label>
                                        <input disabled type="number" id="phone" class="form-control" placeholder=""
                                            name="phone" required value="<%=data.phone?data.phone:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.phone:''%></small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group form-group-address <%=errors.address?'has-danger':''%>">
                                        <label class="control-label">Address</label>
                                        <input disabled type="text" id="address" class="form-control" placeholder=""
                                            name="address" required value="<%=data.address?data.address:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.slug:''%></small>
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group form-group-date <%=errors.date?'has-danger':''%>">
                                        <label class="control-label">Date</label>
                                        <input disabled type="date" id="date" class="form-control" placeholder=""
                                            name="date" required value="<%=data.date_form? data.date_form:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.slug:''%></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="form-group form-group-message <%=errors.message? 'has-danger': ''%>">
                                        <label class="control-label">Message</label>
                                        <%-data.message?data.message:''%>
                                        <small class="form-control-feedback"><%=errors?errors.message:''%></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6 ">
                                    <div class="form-group form-group-note <%=errors.note?'has-danger':''%>">
                                        <label class="control-label">Note</label>
                                        <input disabled type="text" id="note" class="form-control" placeholder=""
                                            name="note" required value="<%=data.note?data.note:''%>">
                                        <small class="form-control-feedback"><%=errors?errors.slug:''%></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group <%=errors.status?'has-danger':''%>">
                                        <label class="control-label">Status</label>
                                        <select disabled class="form-control custom-select" name="status">
                                            <option value="pending" <%=data.status=='pending'?'selected':''%>>Pending
                                            </option>
                                            <option value="active" <%=data.status=='active'?'selected':''%>>Active
                                            </option>
                                            <option value="blocked" <%=data.status=='blocked'?'selected':''%>>Blocked
                                            </option>
                                        </select>
                                        <small class=" form-control-feedback "><%=errors?errors.status:''%></small>
                                    </div>
                                </div>

                            </div>
                            <!--/row-->
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group form-group-spa_id <%=errors.spa_id?'has-danger':''%>">
                                        <label class="control-label">Spa name</label>
                                        <select disabled class="form-control custom-select" name="spa_id">
                                            <%spas.forEach(item=>{
                                            var selected = ( item._id == data.spa_id ) ? "selected" : ""; 
                                            %>
                                            <option value="<%=item._id%>" <%=selected %>><%=item.name%></option>
                                            <% }) %>
                                        </select>
                                        <small class="form-control-feedback "><%=errors?errors.status:''%></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div
                                        class="form-group form-group-service_id <%=errors.service_id?'has-danger':''%>">
                                        <label class="control-label">Service title</label>
                                        <select disabled class="form-control custom-select" name="service_id">
                                            <% services.services.forEach(item=>{ 
                                            var selected = ( item._id == data.service_id ) ? "selected" : ""; 
                                            %>
                                            <option value="<%=item._id%>" <%=selected %>><%=item.title%></option>
                                            <% }) %>
                                        </select>
                                        <small class="form-control-feedback "><%=errors?errors.status:''%></small>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                            <!--/row-->
                            <!--/row-->

                            <div class="form-actions">
                                <a href="/admin/spas/bookings/<%=data._id%>/edit">
                                    <button type="button" class="btn btn-success"> <i class="fa fa-check"></i>
                                        Edit</button>
                                </a>

                                <a href="/admin/spas/bookings">
                                    <button type="button" class="btn btn-inverse">Cancel</button>
                                </a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Row -->
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
